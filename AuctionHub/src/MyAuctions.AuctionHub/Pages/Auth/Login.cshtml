@page
@using MyAuctions.AuctionHub.Pages.Auth
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="page-header">
    <h1 class="page-title">Login</h1>
</div>

<div style="max-width: 400px; margin: 0 auto;">
    <div class="card">
        <form method="post">
            <div class="form-group">
                <label class="form-label" asp-for="LoginRequest.Username">Username</label>
                <input class="form-control" asp-for="LoginRequest.Username" required />
                <span asp-validation-for="LoginRequest.Username" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="form-label" asp-for="LoginRequest.Password">Password</label>
                <input type="password" class="form-control" asp-for="LoginRequest.Password" required />
                <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
            </div>
            
            <div style="margin-top: 1.5rem;">
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>
            </div>
        </form>
        
        <div style="text-align: center; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <p style="color: var(--text-secondary);">
                Don't have an account? 
                <a href="/Auth/Register" style="color: var(--primary-color);">Register here</a>
            </p>
        </div>
    </div>
</div>

